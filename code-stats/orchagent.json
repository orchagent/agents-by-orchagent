{
  "name": "code-stats",
  "version": "v2",
  "type": "code",
  "description": "Analyzes code for quality metrics. Returns line counts, function counts, and warnings for files/functions that are too long.",
  "supported_providers": ["any"],
  "tags": ["code-quality", "metrics", "analysis"],
  "entrypoint": "main.py",
  "input_schema": {
    "type": "object",
    "properties": {
      "path": {
        "type": "string",
        "description": "Local directory path to scan for code files"
      },
      "files": {
        "type": "array",
        "description": "Source code files to analyze",
        "accepts_files": true,
        "accept": [".py", ".js", ".ts", ".tsx", ".jsx", ".go", ".rs"],
        "max_files": 20
      },
      "code": {
        "type": "string",
        "description": "Raw code string to analyze"
      },
      "metadata": {
        "type": "object",
        "properties": {
          "max_file_lines": {"type": "integer", "default": 300},
          "max_function_lines": {"type": "integer", "default": 50}
        }
      }
    }
  }
}
